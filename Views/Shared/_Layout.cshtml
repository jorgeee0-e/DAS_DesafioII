<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Cine+</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/Content/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="~/Views/Peliculas/Index.cshtml">Cine+</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Peliculas")" ">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Rates")">Rates</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Clasificaciones</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Drama" })">Drama</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Crimen" })">Crimen</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Acción" })">Acción</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Biografía" })">Biografía</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Historia" })">Historia</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Aventura" })">Aventura</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Fantasía" })">Fantasía</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Romance" })">Romance</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Fi" })">Sci-Fi</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Misterio" })">Misterio</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("FiltrarPorGenero", "Peliculas", new { genero = "Horror" })">Horror</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex" action="@Url.Action("Details", "Peliculas")" method="GET">
                    <input class="form-control me-2" type="search" name="nombre" placeholder="Search..." />
                    <button class="m-lg-3" style="border-radius:5px" type="submit">Buscar</button>
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi bi-person-fill me-1"></i>
                        User
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Shop in style</h1>
                <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
            </div>
        </div>
    </header>

    <main role="main" class="pb-3 mt-4 m-lg-3">
        @RenderBody()
    </main>

    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Cine+ 2024</p></div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/chart.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/validador.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
